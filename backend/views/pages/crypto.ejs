<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CryptoChecker</title>
    <%- include('../components/head.ejs') %>
  </head>
  <body>
    <%- include('../components/navbar.ejs') %>
    <!-- Form -->
    <div class="mt-3 container">
      <form action="crypto" method="post">
        <div class="form-group">
          <input
            type="text"
            class="form-control mb-2"
            name="ticker"
            placeholder="Enter a ticker"
          />
        </div>
        <button type="submit" class="btn btn-primary">Get coin info</button>
      </form>

      <div class="crypto-info mt-3 rounded bg-secondary text-light p-4">
        <% if (info) { %>
        <h2 class="display-4"><%= info.name %></h2>
        <div class="row">
          <div class="col-md-4">
            <img
              src="<%= info.logo %>"
              alt="<%= info.name %>"
              class="img-fluid mb-3"
            />
          </div>
          <div class="col-md-8">
            <p><strong>Symbol:</strong> <%= info.symbol %></p>
            <p><strong>Category:</strong> <%= info.category %></p>
            <p><strong>Description:</strong> <%= info.description %></p>
            <p><strong>Date Added:</strong> <%= info.date_added %></p>
            <p><strong>Tags:</strong> <%= info.tags.join(", ") %></p>
            <p>
              <strong>Website:</strong>
              <a href="<%= info.urls.website %>"><%= info.urls.website %></a>
            </p>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <%- include('../components/footer.ejs') %>

    <!-- Custom script for displaying error -->
    <% if (error) { %>
    <script>
      alert("An error occurred: <%= error %>");
    </script>
    <% } %>
  </body>
</html>
